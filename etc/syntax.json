    },
    "print_number": {
        "type": "function",
        "pattern": "print\\((\\d+)\\);",
        "replacement": "printf(\"%d\\n\", \\1);"
    },
    "var_string": {
        "type": "variable",
        "pattern": "var = \"(.*)\";",
        "replacement": "char \\1[100];"
    },
    "var_number": {
        "type": "variable",
        "pattern": "var = (\\d+);",
        "replacement": "int \\1;"
    },
    "ref": {
        "type": "input",
        "pattern": "ref (.*) >> (.*);",
        "replacement": "scanf(\"%s\", &\\2);"
    }
