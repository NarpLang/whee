{
    "print": {
        "type": "function",
        "pattern": "print\\((.*)\\);",
        "replacement": "printf(\"%s\\n\", \\1);"
    },
    "var": {
        "type": "variable",
        "pattern": "var = \"(.*)\";",
        "replacement": "char \\1[100];"
    },
    "ref": {
        "type": "input",
        "pattern": "ref (.*) >> (.*);",
        "replacement": "scanf(\"%s\", &\\2);"
    }
}
